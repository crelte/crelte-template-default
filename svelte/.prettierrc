{
	"tabWidth": 4,
	"useTabs": true,
	"singleQuote": true,
	"arrowParens": "avoid",
	"stylelintIntegration": true,
	"htmlWhitespaceSensitivity": "ignore",
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.graphql",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
